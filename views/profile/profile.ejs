<%- include("../layouts/boilerplate") %>

<style>
  .container {
    display: flex;
    align-items: center;
  }

  .btn-container {
    margin-top: 20px;
  }

  .card-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: start;
    gap: 70px;
    margin-top: 20px;
    margin-left: 60px;
    padding: 10px;
  }

  .card {
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    transition: transform 0.3s ease-in-out;
    width: 20rem;
    height: 350px;
    display: flex;
    flex-direction: column;
  }

  .card:hover {
    transform: scale(1.05);
  }

  .card-img-top {
    border-radius: 10px 10px 0 0;
    object-fit: cover;
    width: 100%;
    height: 200px;
  }

  .card-body {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 15px;
    overflow: hidden;
  }

  .card-title {
    margin-bottom: 10px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .card-text {
    margin-bottom: 10px;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }

  .card-text small {
    margin-top: auto;
  }

  .post {
    font-size: 20px;
  }

  .content-information .club-name,
  .club-line {
    text-align: left;
  }

  .content-information {
    margin: 0 20px 20px 0;
  }

  .create-post {
    margin: 0 150px 0 20px;
  }

  /* Modal Styles */
  #confirmModal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    align-items: center;
    justify-content: center;
    z-index: 1000;
  }

  #confirmModal .modal-content {
    background: white;
    padding: 30px;
    border-radius: 8px;
    text-align: center;
    width: 400px;
  }

  #confirmModal button {
    margin: 5px;
  }
</style>

<div class="container">
  <div class="logo">
    <img
      src="<%= club.ClubLogo.url %>"
      alt="Club Logo"
      style="
        width: 200px;
        height: 200px;
        border: 1px solid pink;
        border-radius: 50%;
        margin: 0 100px 0 20px;
      "
    />
  </div>
  <div class="content-information">
    <h1 class="club-name"><%= club.ClubName %></h1>
    <p class="club-line"><%= club.description %></p>
  </div>
  <div class="create-post">
    <span class="post"><b>Posts: </b><%= club.events.length %> </span>
    <% if(user.role !== "student") { %>
    <span>
      <div class="btn-container success">
        <a href="/<%= club.ClubName %>/createpost" class="btn btn-success"
          >Create Event</a
        >
      </div>
    </span>
    <% } %>
  </div>
</div>

<hr />

<% if(user.role !== "student") {%>
<div class="mt-3" style="display: flex; margin-left: 40px">
  <a href="/<%= club.ClubName %>/edit">
    <button class="btn btn-success">Edit</button>
  </a>

  <!-- Delete Form Trigger -->
  <form
    id="deleteForm"
    method="POST"
    action="/<%= club.ClubName %>/delete?_method=DELETE"
    style="margin-left: 10px"
  >
    <button type="button" class="btn btn-dark" onclick="confirmDeletion()">
      Delete
    </button>
  </form>
</div>
<% } %>

<h2 style="margin-left: 600px">Events for <%= club.ClubName %></h2>

<div class="card-container">
  <% if (club.events.length > 0) { %> <% club.events.forEach(event => { %>
  <a
    href="/<%= club.ClubName %>/<%= event.eventName %>/eventdetails"
    style="text-decoration: none; color: inherit"
  >
    <div class="card">
      <img
        src="<%= event.image.url %>"
        class="card-img-top"
        alt="Event Image"
      />
      <div class="card-body">
        <h5 class="card-title"><%= event.eventName %></h5>
        <p class="card-text"><%= event.eventDetails %></p>
        <p class="card-text">
          <small class="text-muted">
            <%= event.visibility === 'collegeExclusive' ? 'College Exclusive' :
            'Open to All' %>
          </small>
        </p>
      </div>
    </div>
  </a>
  <% }) %> <% } else { %>
  <p>No events created yet.</p>
  <% } %>
</div>

<!-- Confirmation Modal -->
<div id="confirmModal">
  <div class="modal-content">
    <h4>Are you sure?</h4>
    <p>
      You are about to delete the club <strong><%= club.ClubName %></strong>.
      This action cannot be undone.
    </p>
    <button onclick="submitForm()" class="btn btn-danger">Yes, Delete</button>
    <button onclick="closeModal()" class="btn btn-secondary">Cancel</button>
  </div>
</div>

<!-- JavaScript -->
<script>
  function confirmDeletion() {
    document.getElementById("confirmModal").style.display = "flex";
  }

  function closeModal() {
    document.getElementById("confirmModal").style.display = "none";
  }

  function submitForm() {
    document.getElementById("deleteForm").submit();
  }
</script>
