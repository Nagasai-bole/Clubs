<%- include("../layouts/boilerplate") %>

<style>
  .container {
    display: flex;
    justify-content: space-evenly;
    align-items: center;
  }

  .btn-container {
    margin-top: 20px;
  }

  .card-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: start;
    gap: 70px;
    margin-top: 20px;
    margin-left: 60px;
    padding: 10px;
  }

  .card {
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    transition: transform 0.3s ease-in-out;
  }

  .card:hover {
    transform: scale(1.05);
  }

  .card img {
    border-radius: 10px 10px 0 0;
    object-fit: cover;
    height: 200px;
  }
</style>

<div class="container">
  <div class="logo">
    <img
      src="<%= club.ClubLogo.url %>"
      alt="Club Logo"
      style="
        width: 250px;
        height: 250px;
        border: 1px solid pink;
        border-radius: 50%;
      "
    />
    <div class="mt-3" style="display: flex; margin-left: 40px">
      <a href="/<%=club.ClubName%>/edit"
        ><button class="btn btn-success">Edit</button></a
      >
      &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
      <form method="post" action="/<%= club.ClubName %>/delete?_method=DELETE">
        <button class="btn btn-dark">Delete</button>
      </form>
    </div>
  </div>
  <span>Posts: <%= club.events.length %></span>
  <span>
    <div class="btn-container success">
      <a href="/<%= club.ClubName %>/createpost" class="btn btn-success"
        >Create Event</a
      >
    </div>
  </span>
</div>

<hr />

<h2 style="margin-left: 600px">Events for <%= club.ClubName %></h2>

<div class="card-container">
  <% if (club.events.length > 0) { %> <% club.events.forEach(event => { %>
  <a
    href="/<%= club.ClubName %>/<%= event.eventName %>/eventdetails"
    style="text-decoration: none; color: inherit"
  >
    <div class="card" style="width: 18rem">
      <img
        src="<%= event.image.url %>"
        class="card-img-top"
        alt="Event Image"
        style="width: 286px; height: 250px"
      />
      <div class="card-body">
        <h5 class="card-title"><%= event.eventName %></h5>
        <p class="card-text"><%= event.eventDetails %></p>
      </div>
    </div>
  </a>
  <% }) %> <% } else { %>
  <p>No events created yet.</p>
  <% } %>
</div>
