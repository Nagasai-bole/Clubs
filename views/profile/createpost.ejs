<%- include("../layouts/boilerplate") %>

<div class="row">
  <div class="col-4 offset-4 mt-4">
    <h3 class="offset-3 col-6">Enter event details</h3>

    <form
      method="post"
      action="/<%= club.ClubName %>/createpost"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="eventName" class="form-label"><b>Event Name</b></label>
        <input
          type="text"
          id="eventName"
          name="eventName"
          placeholder="Enter Event Name"
          class="form-control"
          required
        />
      </div>

      <div class="mb-3">
        <label for="description" class="form-label"><b>Description</b></label>
        <textarea
          id="description"
          name="eventDetails"
          placeholder="Event details"
          class="form-control"
          required
        ></textarea>
      </div>
      <div class="mb-3">
        <label for="eventLink" class="form-label"><b>Registration Url</b></label>
        <input
          id="eventLink"
          name="eventLink"
          class="form-control"
          type="text"
          required
        ></input>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label"><b>Upload Image</b></label>
        <input type="file" id="image" name="image" class="form-control" />
      </div>

      <div class="mb-4">
        <button type="submit" class="btn btn-success add-btn mt-3">
          Submit
        </button>
      </div>
    </form>
  </div>
</div>
