<%- include("../layouts/boilerplate") %>

<style>
  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 20px 15px;
  }

  .table-wrapper {
    overflow-x: auto;
    max-height: 600px;
  }

  table {
    width: 100%;
    border-collapse: collapse;
    font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
    border: 1px solid #d1d5db;
    border-radius: 6px;
    overflow: hidden;
  }

  th,
  td {
    border: 1px solid #e5e7eb;
    padding: 10px 12px;
    text-align: left;
    font-size: 0.9rem;
    color: #374151;
  }

  th {
    background-color: #1f2937; /* dark gray */
    color: #ffffff;
    font-weight: 600;
    text-transform: uppercase;
    font-size: 0.8rem;
    letter-spacing: 0.5px;
  }

  tr:nth-child(even) td {
    background-color: #f9fafb; /* light gray striping */
  }

  .row-number {
    width: 50px;
    font-weight: 600;
    color: #111827;
    text-align: center;
  }

  .no-data {
    color: #b91c1c;
    font-style: italic;
    text-align: center;
    padding: 8px;
    font-size: 0.85rem;
  }

  .cell-content {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    max-width: 160px;
  }

  h2 {
    text-align: center;
    font-size: 1.6rem;
    margin: 30px 0 15px;
    color: #111827;
    font-weight: 700;
  }

  .alert {
    width: 100%;
    max-width: 800px;
    margin: 20px auto;
    padding: 12px;
    border-radius: 4px;
    text-align: center;
    font-size: 0.9rem;
    font-weight: 500;
    background-color: #fee2e2;
    color: #991b1b;
    border: 1px solid #fecaca;
  }

  @media (max-width: 768px) {
    th,
    td {
      padding: 8px;
      font-size: 0.8rem;
    }
    .cell-content {
      max-width: 120px;
    }
    h2 {
      font-size: 1.4rem;
    }
  }

  @media (max-width: 480px) {
    th,
    td {
      padding: 6px;
      font-size: 0.75rem;
    }
    .row-number {
      width: 40px;
    }
    .cell-content {
      max-width: 80px;
    }
  }
</style>

<div class="container">
  <% if (error && error.length > 0) { %>
  <div class="alert"><%= error %></div>
  <% } %>

  <h2>Registered for <%= event.eventName %></h2>

  <div class="table-wrapper">
    <table>
      <thead>
        <tr>
          <th class="row-number">S.No</th>
          <% if (event.teamSize.max === 1 && event.teamSize.min === 1) { %>
          <th>Name</th>
          <% event.formFields.forEach(field => { %> 
            <% if (field.label.toLowerCase() !== 'name') { %>
              <th><%= field.label %></th>
            <% } %> 
          <% }) %> 
          <% } else { %>
          <th>Team Name</th>
          <% event.formFields.forEach(field => { %>
          <th><%= field.label %></th>
          <% }) %> 
          <% } %>
        </tr>
      </thead>

      <tbody>
        <% if (!registrations || registrations.length === 0) { %>
        <tr>
          <td
            colspan="<%= (event.teamSize.max === 1 && event.teamSize.min === 1) ? 2 + event.formFields.filter(f => f.label.toLowerCase() !== 'name').length : 2 + event.formFields.length %>"
            class="no-data"
          >
            No registrations found for this event.
          </td>
        </tr>
        <% } else { %> 
          <% registrations.forEach((registration, index) => { %> 
          <% if (event.teamSize.max === 1 && event.teamSize.min === 1) { %>
        <tr>
          <td class="row-number"><%= index + 1 %></td>
          <% const nameField = event.formFields.find(f => f.label.toLowerCase() === 'name')?.label || 'Name'; %> 
          <% const name = registration.teamMembers[0]?.get(nameField) || 'N/A'; %>
          <td class="cell-content"><%= name %></td>
          <% event.formFields.forEach(field => { %> 
            <% if (field.label.toLowerCase() !== 'name') { %>
              <td class="cell-content">
                <% const value = registration.teamMembers[0]?.get(field.label) ||
                registration.teamMembers[0]?.get(field.label.toLowerCase()) ||
                registration.teamMembers[0]?.get(field.label.charAt(0).toUpperCase() + field.label.slice(1).toLowerCase()); %> 
                <%= typeof value === 'boolean' ? (value ? 'Yes' : 'No') : value || 'N/A' %>
              </td>
            <% } %> 
          <% }) %>
        </tr>
        <% } else { %> 
          <% const teamMembers = registration.teamMembers || []; %>
          <% const rowspan = teamMembers.length || 1; %> 
          <% teamMembers.forEach((member, memberIndex) => { %>
        <tr>
          <% if (memberIndex === 0) { %>
          <td class="row-number" rowspan="<%= rowspan %>"><%= index + 1 %></td>
          <td class="cell-content" rowspan="<%= rowspan %>">
            <%= registration.teamName || 'N/A' %>
          </td>
          <% } %> 
          <% event.formFields.forEach(field => { %>
          <td class="cell-content">
            <% const value = member?.get(field.label) ||
            member?.get(field.label.toLowerCase()) ||
            member?.get(field.label.charAt(0).toUpperCase() + field.label.slice(1).toLowerCase()); %> 
            <%= typeof value === 'boolean' ? (value ? 'Yes' : 'No') : value || 'N/A' %>
          </td>
          <% }) %>
        </tr>
        <% }) %> 
        <% if (teamMembers.length === 0) { %>
        <tr>
          <td class="row-number"><%= index + 1 %></td>
          <td class="cell-content"><%= registration.teamName || 'N/A' %></td>
          <td colspan="<%= event.formFields.length %>" class="no-data">
            No team members
          </td>
        </tr>
        <% } %> 
        <% } %> 
        <% }) %> 
        <% } %>
      </tbody>
    </table>
  </div>
</div>
