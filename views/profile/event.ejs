</style>


<h1 class="event-title"><%= event.eventName %></h1>
<% const winnersExist = event.winners && event.winners.first && event.winners.second && event.winners.third; %>

<div class="announcements">
  <% if (user.role !== "student") { %>
    <% if (!winnersExist) { %>
      <button class="winners" onclick="openModal()">Announce Winners</button>
    <% } else { %>
      <button class="winners" onclick="openWinnerModal()">üèÜ Winners</button>
      <button class="winners edit-btn" onclick="openModal()">‚úèÔ∏è Edit Winners</button>
    <% } %>
  <% } else { %>
    <% if (winnersExist) { %>
      <button class="winners" onclick="openWinnerModal()">üèÜ Winners</button>
    <% } %>
  <% } %>
</div>



<div class="winner-modal" id="studentModal">
  <div class="modal-content">
    <span class="close-btn" onclick="closeWinnerModal()">&times;</span>
    <h2>üèÜ Winners</h2>
    <p>ü•á<strong>1st Prize:</strong> <%= event.winners.first %></p>
    <p>ü•à<strong>2nd Prize:</strong> <%= event.winners.second %></p>
    <p>ü•â<strong>3rd Prize:</strong> <%= event.winners.third %></p>
    <% if (event.winners.announcedAt) { %>
  <p class="timestamp">Announced On: <%= new Date(event.winners.announcedAt).toDateString() %></p>
<% } %>

  </div>
</div>

<div class="winner-modal" id="winnerModal">
  <div class="modal-content">
    <span class="close-btn" onclick="closeModal()">&times;</span>
    <h2><%= event.winners ? "Edit Winners" : "Announce Winners" %></h2>

    <form action="/<%= event.author.ClubName %>/event/<%= event._id %>/announce-winners" method="POST">
      <label>1st Prize Winner:</label>
      <input type="text" name="first" value="<%= event.winners?.first || '' %>" placeholder="Enter name" required />

      <label>2nd Prize Winner:</label>
      <input type="text" name="second" value="<%= event.winners?.second || '' %>" placeholder="Enter name" required />

      <label>3rd Prize Winner:</label>
      <input type="text" name="third" value="<%= event.winners?.third || '' %>" placeholder="Enter name" required />

      <button type="submit"><%= event.winners ? "Update Winners" : "Submit" %></button>
    </form>
  </div>
</div>


<div class="event-card-container">
  <div class="event-card">
    <div class="event-image-container">
      <img
        src="<%= event.image.url %>"
        class="event-image"
        alt="<%= event.eventName %>"
      />
    </div>
    <div class="event-details-card">
      <div class="event-description-container">
        <p class="event-description-container">
          <b>Description:</b> <%= event.eventDetails %>
        </p>
        <p class="event-description-container">
          <b>Mode:</b> <%= event.mode %>
        </p>
        <p class="event-description-container">
          <b>Venue:</b> <%= event.venue %>
        </p>
        <p class="event-description-container"><b>Coordinators:</b></p>
        <% event.coordinators.forEach(coordinator => { %>
        <p class="event-description-container">
          <%= coordinator.name %> (<%= coordinator.contact %>)
        </p>
        <% }) %> <% if (event.branchName) { %>
        <p class="event-description-container">
          <b>Branch:</b> For <%= event.branchName %> students only eligible for
          participation
        </p>
        <% } %>
        <p class="event-description-container">
          <b>Eligibility:</b> <%= event.eligibility %>
        </p>
        <p class="event-description-container">
          <b>Team Size: </b> <% if(event.teamSize.min == event.teamSize.max) {%>
            <p><%= event.teamSize.max %></p>
            <% } else{%>
              <p><%= event.teamSize.min %> - <%= event.teamSize.max %></p>
              <% } %>
        </p>
        <p class="event-description-container">
          <b>Rewards:</b> <%= event.rewards %>
        </p>
        <p class="event-description-container">
          <b>Agenda:</b> <%= event.agenda %>
        </p>
        <p class="event-description-container">
          <b>Starting Date:</b> <%= event.startDate %>
        </p>
        <p class="event-description-container">
          <b>Ending Date:</b> <%= event.endDate %>
        </p>
        <p class="event-description-container">
          <b>Registration Deadline:</b> <%= event.registrationDeadline %>
        </p>
      </div>

      <% if (user && user.role === "student") { %> <% if
      (!event.registeredStudents.includes(user._id)) { %>
      <div class="button-container">
        <form
          action="/<%= event.author.ClubName %>/event/<%= event._id %>/register"
          method="get"
        >
        <% if (new Date() > new Date(event.registrationDeadline)) { %>
            <p class="registration-ended-status"> Registration Completed</p>
          <% } else {%>
          <button type="submit" class="btn btn-success submit-btn">
            Register
          </button>
          <% } %>
        </form>
      </div>
      <% } else { %>
      <p class="registration-status">
        You are already registered for this event.
      </p>
      <% } %> <% } %> <% if (!user || user.role !== "student") { %>
      <div class="admin-actions">
        <div class="button-group">
          <form
            action="/<%= event.author.ClubName %>/event/<%= event._id %>/edit"
          >
            <button type="submit" class="btn btn-primary edit-btn">Edit</button>
          </form>

          <form
            id="deleteEventForm"
            action="/<%= event.author.ClubName %>/event/<%= event._id %>/delete?_method=DELETE"
            method="post"
          >
            <button
              type="button"
              class="btn btn-danger delete-btn"
              onclick="confirmEventDeletion()"
            >
              Delete
            </button>
          </form>
        </div>

        <form
          action="/<%= event.author.ClubName %>/event/<%= event._id %>/viewRegistration"
          method="get"
        >
          <div class="button-container">
            <button type="submit" class="btn btn-info view-btn">
              View Registrations
            </button>
          </div>
        </form>
      </div>
      <% } %>
    </div>
  </div>
</div>

<div
  id="confirmEventModal"
  style="
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 1000;
    justify-content: center;
    align-items: center;
  "
>
  <div
    style="
      background: white;
      padding: 30px;
      border-radius: 10px;
      width: 90%;
      max-width: 400px;
      text-align: center;
    "
  >
    <h4>Are you sure?</h4>
    <p>
      You are about to delete the event
      <strong><%= event.eventName %></strong> in club
      <strong><%= event.author.ClubName %></strong>.
    </p>
    <button
      onclick="submitEventDelete()"
      class="btn btn-danger"
      type="button"
      style="margin: 5px"
    >
      Yes, Delete
    </button>
    <button
      onclick="closeEventModal()"
      class="btn btn-secondary"
      style="margin: 5px"
    >
      Cancel
    </button>
  </div>
</div>

<script>
  function confirmEventDeletion() {
    document.getElementById("confirmEventModal").style.display = "flex";
  }

  function closeEventModal() {
    document.getElementById("confirmEventModal").style.display = "none";
  }

  function submitEventDelete() {
    document.getElementById("deleteEventForm").submit();
  }

  //winners
  function openModal() {
    document.getElementById("winnerModal").style.display = "flex";
  }

  function closeModal() {
    document.getElementById("winnerModal").style.display = "none";
  }

  function openWinnerModal() {
    document.getElementById("studentModal").style.display = "flex";
  }

  function closeWinnerModal() {
    document.getElementById("studentModal").style.display = "none";
  }

  // Optional: Close on outside click
  window.onclick = function (event) {
    const adminModal = document.getElementById("winnerModal");
    const studentModal = document.getElementById("studentModal");

    if (event.target === adminModal) adminModal.style.display = "none";
    if (event.target === studentModal) studentModal.style.display = "none";
  };
</script>