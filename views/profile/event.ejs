}

/* Modal Overlay */
.winner-modal {
  display: none;
  position: fixed;
  z-index: 1000;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  animation: fadeIn 0.2s ease-out;
}

.winner-modal.show {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20px;
