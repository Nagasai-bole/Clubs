<div class="winner-modal" id="studentModal">
  <div class="modal-content">
    <span class="close-btn" onclick="closeWinnerModal()">&times;</span>
    <h2>🏆 Winners</h2>
    <p>🥇<strong>1st Prize:</strong> <%= event.winners.first %></p>
    <p>🥈<strong>2nd Prize:</strong> <%= event.winners.second %></p>
    <p>🥉<strong>3rd Prize:</strong> <%= event.winners.third %></p>
    <% if (event.winners.announcedAt) { %>
      <p class="timestamp">Announced On: <%= new Date(event.winners.announcedAt).toDateString() %></p>
    <% } %>
  </div>
</div>

<div class="winner-modal" id="winnerModal">
  <div class="modal-content">
    <span class="close-btn" onclick="closeModal()">&times;</span>
    <h2><%= event.winners ? "Edit Winners" : "Announce Winners" %></h2>
    <form action="/<%= event.author.ClubName %>/event/<%= event._id %>/announce-winners" method="POST">
      <label>1st Prize Winner:</label>
      <input type="text" name="first" value="<%= event.winners?.first || '' %>" placeholder="Enter name" required />
      <label>2nd Prize Winner:</label>
      <input type="text" name="second" value="<%= event.winners?.second || '' %>" placeholder="Enter name" required />
      <label>3rd Prize Winner:</label>
      <input type="text" name="third" value="<%= event.winners?.third || '' %>" placeholder="Enter name" required />
      <button type="submit"><%= event.winners ? "Update Winners" : "Submit" %></button>
    </form>
  </div>
</div>

