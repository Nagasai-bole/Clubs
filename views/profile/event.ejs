@media (max-width: 480px) {
  .winner-modal {
    padding: 16px;
  }
  
  .modal-content {
    padding: 24px 20px;
    border-radius: 12px;
  }
  
  .modal-content h2 {
    font-size: 20px;
    margin-bottom: 20px;
  }
  
  .modal-content p {
    font-size: 15px;
    margin-bottom: 14px;
  }
  
  .timestamp {
    margin-top: 20px !important;
    padding-top: 16px;
