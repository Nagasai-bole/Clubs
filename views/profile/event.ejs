<%- include("../layouts/boilerplate") %>

<h1 class="event-title"><%= event.eventName %></h1>

<div class="event-image-container">
  <img
    src="<%= event.image.url %>"
    class="event-image"
    alt="<%= event.eventName %>"
  />
</div>

<div class="event-description-container">
  <p class="event-details"><%= event.eventDetails %></p>
</div>

<% if(user.role === "student") { %> <% if
(!event.registeredStudents.includes(user._id)) { %>
<form
  action="/<%= event.author.ClubName %>/<%= event.eventName %>/register"
  method="post"
  class="needs-validation"
  novalidate
>
  <div class="registration-form-container">
    <h3>Register for this Event</h3>
    <% event.formFields.forEach(field => { %>
    <div class="mb-3">
      <label for="<%= field.label %>" class="form-label"
        ><b><%= field.label %></b></label
      >
      <% if (field.type === "checkbox") { %> <input type="checkbox" id="<%=
      field.label %>" name="<%= field.label %>" value="true" <%=
      field.isRequired ? 'required' : '' %> /> <% } else { %> <input type="<%=
      field.type %>" id="<%= field.label %>" name="<%= field.label %>"
      class="form-control" <%= field.isRequired ? 'required' : '' %> />
      <div class="invalid-feedback">This field is required.</div>
      <% } %>
    </div>
    <% }) %>
    <div class="back-button-container">
      <button type="submit" class="btn btn-success add-btn mt-3">
        Submit Registration
      </button>
    </div>
  </div>
</form>
<% } else { %>
<p>You are already registered for this event.</p>
<% } %> <% } %> <% if(!user.role) { %>

<div style="display: flex; align-content: space-around">
  <form action="/<%= event.author.ClubName%>/<%=event.eventName%>/edit">
    <button
      type="submit"
      class="btn btn-success add-btn"
      style="margin-left: 43rem"
    >
      edit
    </button>
  </form>
  &nbsp; &nbsp; &nbsp; &nbsp;
  <form
    action="/<%= event.author.ClubName%>/<%=event.eventName%>/delete?_method=DELETE"
    method="post"
  >
    <button type="submit" class="btn btn-success add-btn">delete</button>
  </form>
</div>
<form
  action="/<%= event.author.ClubName %>/<%= event.eventName %>/eventdetails/viewRegistration"
  method="get"
>
  <div class="back-button-container">
    <button type="submit" class="btn btn-success add-btn mb-3">
      View Registrations
    </button>
  </div>
</form>
<% } %>

<style>
  .event-title {
    text-align: center;
    font-size: 2rem;
    margin-top: 30px;
    color: #4b6cb7;
  }
  .event-image-container {
    display: flex;
    justify-content: center;
    margin-top: 30px;
  }
  .event-image {
    max-width: 100%;
    height: auto;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    max-height: 400px;
  }
  .event-description-container {
    margin-top: 20px;
    text-align: center;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }
  .event-details {
    font-size: 1.2rem;
    color: #555;
    line-height: 1.6;
  }
  .back-button-container {
    display: flex;
    justify-content: center;
    margin-top: 30px;
  }
  .registration-form-container {
    max-width: 500px;
    margin: 20px auto;
  }
  @media (max-width: 768px) {
    .event-image {
      max-height: 300px;
    }
    .event-details {
      font-size: 1rem;
    }
  }
</style>
