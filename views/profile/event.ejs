}

  .modal-content h2 {
    display: flex;
    align-items: center;
    gap: 12px;
    color: #111827;
    font-size: 24px;
    font-weight: 600;
    margin: 0 0 24px 0;
    line-height: 1.2;
  }

  .modal-content p {
    display: flex;
    align-items: center;
    gap: 12px;
    margin: 0 0 16px 0;
    padding: 0;
    color: #374151;
    font-size: 16px;
    font-weight: 400;
    line-height: 1.5;
  }

  .modal-content p:last-of-type {
    margin-bottom: 0;
  }

  .modal-content strong {
    color: #111827;
    font-weight: 600;
  }

  .modal-content p span:last-child {
    color: #6b7280;
  }

  .timestamp {
    margin-top: 24px !important;
    padding-top: 20px;
    border-top: 1px solid #e5e7eb;
    color: #6b7280 !important;
    font-size: 14px !important;
    font-weight: 400 !important;
    gap: 8px !important;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
