  }
.modal-content h2 {
  margin-bottom: 20px;
  color: #333;
  font-weight: bold;
}

.modal-content label {
  display: block;
  margin-top: 10px;
  font-weight: 500;
}

.modal-content input {
  width: 100%;
  padding: 8px 10px;
  margin-top: 5px;
  margin-bottom: 15px;
  border: 1px solid #ccc;
  border-radius: 6px;
}

.modal-content button {
  width: 100%;
  padding: 10px;
  background-color: #007bff;
  border: none;
  color: white;
  font-weight: 600;
  border-radius: 8px;
  cursor: pointer;
  transition: 0.2s;
}

.modal-content button:hover {
