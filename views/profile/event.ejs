  <div class="hamburger" onclick="toggleMenu()">
  <div></div>
  <div></div>
  <div></div>
</div>

<!-- Hamburger Dropdown Menu -->
<div class="hamburger-dropdown" id="mobileMenu">
  <% if (user.role !== "student") { %>
    <% if (!winnersExist) { %>
      <a href="#" class="menu-link" onclick="openModal()">Announce Winners</a>
    <% } else { %>
      <a href="#" class="menu-link" onclick="openWinnerModal()">🏆 Winners</a>
