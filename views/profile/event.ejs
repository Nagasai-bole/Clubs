    from {
      transform: scale(0.95);
      opacity: 0;
    }
    to {
      transform: scale(1);
      opacity: 1;
    }
  }

  @media (max-width: 480px) {
    .winner-modal {
      padding: 16px;
    }
    .modal-content {
      padding: 24px 20px;
      border-radius: 12px;
    }
    .modal-content h2 {
      font-size: 20px;
      margin-bottom: 20px;
    }
    .modal-content p {
      font-size: 15px;
      margin-bottom: 14px;
    }
    .timestamp {
      margin-top: 20px !important;
      padding-top: 16px;
      font-size: 13px !important;
    }
    .close-btn {
      top: 12px;
      right: 16px;
      font-size: 20px;
      width: 28px;
      height: 28px;
    }
  }

  /* Hamburger Styles */
  .hamburger {
    display: none; /* Hidden by default (above 490px) */
    flex-direction: column;
    justify-content: center;
    cursor: pointer;
    gap: 5px;
    width: 30px;
    height: 24px;
    position: absolute;
    top: 25px;
    right: 20px;
    z-index: 1100;
  }

  .hamburger div {
    width: 100%;
    height: 4px;
    background: #333;
    border-radius: 2px;
    transition: all 0.3s ease;
  }

  /* Hamburger Dropdown Menu */
  .hamburger-dropdown {
    display: none; /* Hidden by default (above 490px) */
    position: absolute;
    top: 30px; /* Below announcements (40px) + padding */
    right: 20px;
    width: 250px;
    background: rgba(30, 30, 30, 0.95);
    backdrop-filter: blur(10px);
    color: white;
    border-radius: 14px;
    box-shadow: 0px 8px 25px rgba(0, 0, 0, 0.4);
    z-index: 1200;
    flex-direction: column;
    padding: 16px 0;
    font-family: "Segoe UI", sans-serif;
    opacity: 0;
    transform: translateY(-10px);
    transition: all 0.25s ease;
    max-height: 300px; /* Sufficient height for buttons */
    overflow-y: auto; /* Scroll if content exceeds */
  }

  .hamburger-dropdown.show {
    display: flex;
    opacity: 1;
    transform: translateY(0);
  }

  .menu-link {
    padding: 12px 20px;
    color: white;
    text-decoration: none;
    display: block;
    transition: background 0.2s ease, color 0.2s ease;
  }

  .menu-link:hover {
    background: linear-gradient(90deg, rgba(59, 210, 173, 0.15), transparent);
    color: #3bd2ad;
  }

  .logout-btn {
    color: #ff5e5e;
    font-weight: 500;
  }

  .logout-btn:hover {
    background: linear-gradient(90deg, rgba(255, 94, 94, 0.15), transparent);
    color: #ff9999;
  }

  /* Explicitly ensure above 490px styling */
  @media (min-width: 491px) {
    .announcements {
      display: block; /* Ensure visible above 490px */
    }
    .hamburger {
      display: none; /* Ensure hidden above 490px */
    }
    .hamburger-dropdown {
      display: none; /* Ensure hidden above 490px */
    }

  }

  .navbar {
  min-height: 50px;
}


@media (max-width: 490px) {
  .admin-actions {
    display: flex;      /* keep them visible */
    flex-direction: column;  /* stack vertically if screen is too small */
    gap: 8px;
  }
}

  @media (max-width: 490px) {
    .announcements {
      display: none; /* Hide announcements below 490px */
    }
    .hamburger {
      display: flex; /* Show hamburger below 490px */
    }
  }

  /* Focus styles for accessibility */
  .close-btn:focus {
    outline: 2px solid #3b82f6;
    outline-offset: 2px;
  }



  /* Smooth exit animation */
  .winner-modal.closing {
    animation: fadeOut 0.15s ease-out forwards;
  }

  .winner-modal.closing .modal-content {
    animation: modalSlideOut 0.15s ease-out forwards;
  }

  @keyframes fadeOut {
    from {
      opacity: 1;
    }
    to {
      opacity: 0;
    }
  }

  @keyframes modalSlideOut {
    from {
      transform: scale(1);
      opacity: 1;
    }
    to {
      transform: scale(0.95);
      opacity: 0;
    }
  }

  @media (max-width: 490px) {
      .button-container {
        display: none !important; /* Added !important to override any potential styles */
      }
  }
</style>

<h1 class="event-title"><%= event.eventName %></h1>
<% const winnersExist = event.winners && event.winners.first && event.winners.second && event.winners.third; %>

<div class="announcements">
  <% if (user.role !== "student") { %>
    <% if (!winnersExist) { %>
      <button class="winners" onclick="openModal()">Announce Winners</button>
    <% } else { %>
      <button class="winners" onclick="openWinnerModal()">🏆 Winners</button>
      <button class="winners edit-btn" onclick="openModal()">
        <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
