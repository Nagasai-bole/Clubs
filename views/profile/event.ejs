<%- include("../layouts/boilerplate") %>

<style>
  /* Your existing styles (unchanged parts skipped for brevity) */
  .event-title {
    text-align: center;
    font-size: 2.5rem;
    margin-top: 40px;
    color: #2c3e50;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .event-card-container {
    display: flex;
    justify-content: center;
    margin-top: 30px;
    padding: 0 20px;
  }

  .event-card {
    background: #ffffff;
    border-radius: 15px;
