<%- include("../layouts/boilerplate") %>

<style>
  body {
    background-color: #fff;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  }

  .edit-form-container {
    max-width: 900px; /* Increased from 900px to maintain consistency */
    margin: 60px auto;
    padding: 40px;
    background: #fff;
    border: 1px solid #fff;
    border-radius: 20px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    transition: box-shadow 0.3s ease;
  }

  .edit-form-container:hover {
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
  }

  .edit-form-container h1 {
    text-align: center;
    font-size: 32px;
    font-weight: 700;
    color: #222;
    margin-bottom: 35px;
  }

  .form-group {
    margin-bottom: 25px;
  }

  .form-group label {
    display: block;
    margin-bottom: 10px;
    font-weight: 600;
    font-size: 18px;
    color: #333;
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    width: 100%; /* Ensure fields scale with container */
    padding: 8px 18px;
    border: 1px solid #d2d2d2;
    border-radius: 10px;
    font-size: 17px;
    background-color: #fff;
    transition: border 0.3s ease;
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    border-color: #007bff !important; /* Blue border on focus */
    box-shadow: 0 0 5px rgba(0, 123, 255, 0.5) !important; /* Blue glow */
    background-color: #fff;
    outline: none;
  }

  .error-border {
    border: 2px solid red !important;
  }

  .error-message {
    color: red;
    font-size: 0.875rem;
    margin-top: 5px;
    text-align: left;
  }

  .form-group input[type="file"] {
    padding: 6px;
    background-color: transparent;
  }

  .form-group img {
    margin-top: 10px;
    max-width: 120px;
    border: 1px solid #fff;
    border-radius: 6px;
  }

  .form-buttons {
    display: flex;
    justify-content: flex-end;
    gap: 16px;
    margin-top: 30px;
  }

  .form-buttons button {
    padding: 14px 28px;
    font-size: 17px;
    font-weight: 600;
    border-radius: 10px;
    border: none;
    cursor: pointer;
    transition: background 0.3s ease, transform 0.2s ease;
  }

  .submit-btn {
    background-color: #28a745;
    color: white;
    width: 20%; /* Ensure button scales with container */
  }

  .submit-btn:hover {
    background-color: #218838;
    transform: translateY(-2px);
  }

  .cancel-btn {
    background-color: #dc3545;
    color: white;
    width: 100%; /* Ensure button scales with container */
  }

  .cancel-btn:hover {
    background-color: #c82333;
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .edit-form-container {
      padding: 20px;
      margin: 30px auto;
    }
    .edit-form-container h1 {
      font-size: 28px;
    }
    .form-group input,
    .form-group select,
    .form-group textarea {
      padding: 12px;
      font-size: 16px;
    }
    .form-buttons button {
      padding: 12px 20px;
      font-size: 16px;
    }
  }

  img{
    height: 150px;
    width: 150px;
  }

  .btn-success-bright {
  background-color: #28a745 !important;
  border: none;
}

.btn-success-bright:hover {
  background-color: #198754 !important;
}

</style>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h3 class="text-center mb-4">Edit College Details</h3>

      <% if (error && error.length) { %>
        <div class="error-message"><%= error %></div>
      <% } %>
      <% if (success && success.length) { %>
        <div class="success-message"><%= success %></div>
      <% } %>

      <form
        action="/college/edit/<%= college._id %>?_method=PUT"
        method="POST"
        enctype="multipart/form-data"
        class="needs-validation event-form shadow p-4 rounded"
        novalidate
        id="editCollegeForm"
      >
        <div class="mb-3">
          <label for="college" class="form-label fw-bold">College Name</label>
          <input
            type="text"
            id="college"
            name="college"
            value="<%= college.college %>"
            class="form-control"
            required
          />
        <div class="invalid-feedback">Please enter a valid college name.</div>
        </div>

        <div class="mb-3">
          <label for="email" class="form-label fw-bold">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            value="<%= college.email %>"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please a valid email id.</div>
        </div>

        <div class="mb-3">
          <label for="collegeId" class="form-label fw-bold">College ID</label>
          <input
            type="text"
            id="collegeId"
            name="collegeId"
            value="<%= college.collegeId %>"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter a valid college id.</div>
        </div>

        <div class="mb-3">
          <label for="principalName" class="form-label fw-bold">Principal Name</label>
          <input
            type="text"
            id="principalName"
            name="principalName"
            value="<%= college.principalName %>"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter principal's name.</div>
        </div>

        <div class="mb-3">
          <label for="establishedYear" class="form-label fw-bold">Established Year</label>
          <input
            type="number"
            id="establishedYear"
            name="establishedYear"
            value="<%= college.establishedYear %>"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please specify the established year of your college.</div>
        </div>

        <div class="mb-3">
          <label for="address" class="form-label fw-bold">Address</label>
          <textarea
            id="address"
            name="address"
            rows="3"
            class="form-control"
            required
          ><%= college.address %></textarea>
          <div class="invalid-feedback">Please enter a valid address.</div>
        </div>

        <div class="mb-3">
          <label for="collegeType" class="form-label fw-bold">College Type</label>
          <select
            id="collegeType"
            name="collegeType"
            class="form-select"
          >
            <option value="Government" <%= college.collegeType === 'Government' ? 'selected' : '' %>>
              Government
            </option>
            <option value="Private" <%= college.collegeType === 'Private' ? 'selected' : '' %>>
              Private
            </option>
            <option value="Autonomous" <%= college.collegeType === 'Autonomous' ? 'selected' : '' %>>
              Autonomous
            </option>
          </select>
          <div id="collegeTypeError" class="error-message"></div>
        </div>

        <div class="mb-3">
          <label for="affiliatedUniversity" class="form-label fw-bold">Affiliated University</label>
          <input
            type="text"
            id="affiliatedUniversity"
            name="affiliatedUniversity"
            value="<%= college.affiliatedUniversity %>"
            class="form-control"
          />
          <div id="affiliatedUniversityError" class="error-message"></div>
        </div>

        <div class="mb-3">
          <label for="collegeLogo" class="form-label fw-bold">College Logo</label>
          <input
            type="file"
            id="collegeLogo"
            name="collegeLogo"
            accept="image/*"
            class="form-control"
          />
          <div id="collegeLogoError" class="error-message"></div>
          <% if (college.collegeLogo && college.collegeLogo.url) { %>
            <p class="mt-2">Current Logo:</p>
            <img src="<%= college.collegeLogo.url %>" alt="Current Logo" class="img-fluid" />
          <% } %>
        </div>

        <div class="mb-4 text-center">
          <button type="submit" class="btn btn-success btn-lg w-100 btn-success-bright">
            Save Changes
          </button>
        </div>
      </form>
    </div>
  </div>
</div>


<script>
  document.getElementById("editCollegeForm").addEventListener("submit", function (event) {
    let isValid = true;

    // Get input fields
    const collegeInput = document.getElementById("college");
    const emailInput = document.getElementById("email");
    const collegeIdInput = document.getElementById("collegeId");

    // Get error message elements
    const collegeError = document.getElementById("collegeError");
    const emailError = document.getElementById("emailError");
    const collegeIdError = document.getElementById("collegeIdError");

    // Reset errors and styles
    collegeError.textContent = "";
    emailError.textContent = "";
    collegeIdError.textContent = "";
    collegeInput.classList.remove("error-border");
    emailInput.classList.remove("error-border");
    collegeIdInput.classList.remove("error-border");

    // Validate College Name
    if (collegeInput.value.trim() === "") {
      collegeError.textContent = "College name is required.";
      collegeInput.classList.add("error-border");
      isValid = false;
    }

    // Validate Email
    if (emailInput.value.trim() === "") {
      emailError.textContent = "Email is required.";
      emailInput.classList.add("error-border");
      isValid = false;
    } else if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(emailInput.value)) {
      emailError.textContent = "Please enter a valid email address.";
      emailInput.classList.add("error-border");
      isValid = false;
    }

    // Validate College ID
    if (collegeIdInput.value.trim() === "") {
      collegeIdError.textContent = "College ID is required.";
      collegeIdInput.classList.add("error-border");
      isValid = false;
    }

    if (!isValid) {
      event.preventDefault();
    }
  });

  // Real-time Validation - Remove Error on Input
  document.querySelectorAll("input, select, textarea").forEach((input) => {
    input.addEventListener("input", function () {
      if (this.type === "file") {
        if (this.files.length > 0) {
          this.classList.remove("error-border");
          document.getElementById(this.id + "Error").textContent = "";
        }
      } else {
        if (this.value.trim() !== "") {
          this.classList.remove("error-border");
          document.getElementById(this.id + "Error").textContent = "";
        }
      }
    });
  });

  // Bootstrap validation
  (() => {
    'use strict';
    const forms = document.querySelectorAll('.needs-validation');
    Array.from(forms).forEach(form => {
      form.addEventListener('submit', event => {
        if (!form.checkValidity()) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  })();
</script>