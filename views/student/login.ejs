<%- include("../layouts/boilerplateWN") %>

<style>
  .stu-login-container {
    max-width: 400px;
    margin: 50px auto;
    padding: 25px;
    background: #fff;
    border: 1px solid #ddd;
    border-radius: 8px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
  }

  .form-title {
    font-size: 1.5rem;
    text-align: center;
    font-weight: bold;
    margin-bottom: 25px;
  }

  .form {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .input-container {
    position: relative;
  }

  .input-container input {
    width: 100%;
    padding: 12px 40px 12px 12px;
    font-size: 1rem;
    border: 1px solid #ccc;
    border-radius: 6px;
    transition: border-color 0.3s ease;
  }

  .input-container input:focus {
    border-color: #007bff !important;
    box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
    outline: none;
  }

  .input-container span {
    position: absolute;
    right: 12px;
    top: 50%;
    transform: translateY(-50%);
    color: #999;
  }

  .submit {
    background-color: #28a745;
    border: none;
    color: white;
    padding: 12px;
    font-size: 1rem;
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.3s ease;
    width: 100%;
  }

  .submit:hover {
    background-color: #218838;
    transform: translateY(-2px);
  }

  .signup-link {
    text-align: center;
    font-size: 0.95rem;
    margin-top: 15px;
  }

  .signup-link a {
    color: #007bff;
    text-decoration: none;
  }

  .signup-link a:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .stu-login-container {
      padding: 15px;
    }
    .submit {
      padding: 10px;
    }
  }

  .btn-success-bright {
    background-color: #28a745 !important;
    border: none;
  }

  .btn-success-bright:hover {
    background-color: #198754 !important;
  }
</style>

<h1>Student Registration</h1>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
      <form
        id="studentLoginForm"
        method="post"
        action="/studentRegistration/login"
        novalidate
        class="needs-validation event-form shadow p-4 rounded"
      >
        <!-- Registration Number -->
        <div class="mb-4">
          <label for="regNo" class="form-label fw-bold">Student Email</label>
          <input
            type="text"
            id="email"
            name="email"
            placeholder="Enter Registration Number"
            class="form-control form-control-lg"
            required
          />
          <div class="error-message" id="regNoError"></div>
        </div>

        <!-- Password -->
        <div class="mb-4">
          <label for="password" class="form-label fw-bold">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            placeholder="Enter Password"
            class="form-control"
            required
          />
          <div class="error-message" id="passwordError"></div>
        </div>

        <!-- Submit Button -->
        <div class="mb-5 text-center">
          <button
            type="submit"
            class="btn btn-success btn-lg w-100 btn-success-bright"
          >
            Login
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
