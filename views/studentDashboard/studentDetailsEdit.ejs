<%- include("../layouts/boilerplate") %>

<style>
  .profile-form {
    background: #fff;
    border: 1px solid #ddd;
    transition: box-shadow 0.3s ease;
    max-width: 50%; /* Half of page width */
    margin: 50px auto;
    padding: 40px;
    border-radius: 12px;
    min-width: 400px; /* Prevents shrinking too small */
  }

  .profile-form:hover {
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
  }

  .error-border {
    border: 2px solid red !important;
  }

  .form-control {
    font-size: 1.1rem;
    padding: 14px;
  }

  .form-control:focus {
    border-color: #007bff !important;
    box-shadow: 0 0 7px rgba(0, 123, 255, 0.5) !important;
  }

  .error-message {
    color: red;
    font-size: 1rem;
    margin-top: 6px;
  }

  .success-message {
    color: green;
    font-size: 1.05rem;
    margin-bottom: 20px;
    text-align: center;
  }

  .btn {
    font-size: 1.1rem;
    font-weight: 500;
    padding: 10px 15px;
    border-radius: 8px;
    transition: all 0.3s ease;
  }

  .btn-success {
    background-color: #28a745;
    border: none;
  }

  .btn-success:hover {
    background-color: #218838;
    transform: translateY(-2px);
  }

  .btn-danger {
    background-color: #dc3545;
    border: none;
  }

  .btn-danger:hover {
    background-color: #c82333;
    transform: translateY(-2px);
  }

  .profile-title {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 35px;
    color: #4b6cb7;
    font-weight: 600;
  }

  .profile-form {
    background: #fff;
    border: 1px solid #ddd;
    transition: box-shadow 0.3s ease;
    max-width: 50%;
    margin: 50px auto;
    padding: 40px;
    border-radius: 12px;
    min-width: 400px; /* default for larger screens */
  }

  /* âœ… Responsive fix */
  @media (max-width: 768px) {
    .profile-form {
      max-width: 90%; /* take almost full width */
      min-width: auto; /* remove 400px restriction */
      padding: 20px;
    }
  }

  @media (max-width: 445px) {
    .profile-form {
      max-width: 95%; /* stretch nicely */
      padding: 15px; /* smaller padding for tiny screens */
    }

    .profile-title {
      font-size: 1.8rem; /* scale down title */
    }

    .btn {
      font-size: 1rem;
      padding: 8px 12px;
    }
  }

  @media (max-width: 300px) {
    .profile-form {
      max-width: 100%;
      padding: 10px;
    }

    .profile-title {
      font-size: 1.5rem;
    }
  }
</style>

<h1 class="profile-title">Edit Profile</h1>

<div class="profile-form">
  <% if (error && error.length) { %>
  <div class="error-message"><%= error %></div>
  <% } %> <% if (success && success.length) { %>
  <div class="success-message"><%= success %></div>
  <% } %>

  <form
    action="/edit-profile"
    method="POST"
    class="needs-validation"
    novalidate
    id="editProfileForm"
  >
    <!-- Name -->
    <div class="mb-4">
      <label for="studentName" class="form-label">Name</label>
      <input
        type="text"
        id="studentName"
        name="studentName"
        class="form-control"
        value="<%= student.studentName %>"
        required
      />
      <div id="studentNameError" class="error-message"></div>
    </div>

    <!-- Email -->
    <div class="mb-4">
      <label for="email" class="form-label">Email</label>
      <input
        type="email"
        id="email"
        name="email"
        class="form-control"
        value="<%= student.email %>"
        required
      />
      <div id="emailError" class="error-message"></div>
    </div>

    <!-- Registration Number -->
    <div class="mb-4">
      <label for="regNo" class="form-label">Registration Number</label>
      <input
        type="text"
        id="regNo"
        name="regNo"
        class="form-control"
        value="<%= student.regNo %>"
        required
      />
      <div id="regNoError" class="error-message"></div>
    </div>

    <!-- Buttons -->
    <div class="d-flex justify-content-between mt-5">
      <a href="/index" class="btn btn-danger w-45">Cancel</a>
      <button type="submit" class="btn btn-success w-45">Save Changes</button>
    </div>
  </form>
</div>
