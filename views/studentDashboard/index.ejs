<%- include("../layouts/boilerplate") %>

<style>
  .club-container {
    display: grid;
    grid-template-columns: repeat(
      auto-fit,
      minmax(300px, 1fr)
    ); /* Max 4 per row */
    gap: 20px; /* Space between cards */
    padding: 40px; /* Adjust padding around container */
    justify-content: center;
  }

  .club-link {
    text-decoration: none;
    color: inherit;
  }

  .club-card {
    background: white;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    transition: transform 0.3s ease;
    padding: 0;
    margin: 0;
  }

  .club-card:hover {
    transform: translateY(-5px); /* Slight hover effect */
  }

  .card-img-top {
    height: 200px;
    width: 100%;
    object-fit: cover;
  }

  .card-body {
    padding: 15px;
    text-align: center;
  }

  .card-title {
    margin-bottom: 10px;
  }

  /* From Uiverse.io by vinodjangid07 */
  .InputContainer {
    width: 420px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(
      to bottom,
      rgb(227, 213, 255),
      rgb(255, 231, 231)
    );
    border-radius: 30px;
    overflow: hidden;
    cursor: pointer;
    box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.075);
  }

  .input {
    width: 410px;
    height: 40px;
    border: none;
    outline: none;
    caret-color: rgb(255, 81, 0);
    background-color: rgb(255, 255, 255);
    border-radius: 30px;
    padding-left: 15px;
    letter-spacing: 0.8px;
    color: rgb(19, 19, 19);
    font-size: 13.4px;
  }
  .btn-search {
    background-color: violet;
    color: #fff;
    border-radius: 25px;
    padding: 0 1rem 0 1rem;
  }
  .btn-search:hover {
    background-color: #fe424d;
    color: #fff;
  }
  .btn-search i {
    display: inline;
    margin-right: 0.5rem;
  }
</style>
<nav class="navbar bg-body-tertiary">
  <div class="container-fluid">
    <a class="navbar-brand">Navbar</a>
    <form class="d-flex col-4" style="margin-right: 500px" role="search">
      <div class="InputContainer">
        <input
          placeholder="Search.."
          id="input"
          class="input"
          name="text"
          type="text"
        />
      </div>
      <button class="btn btn-search" type="submit">
        <i class="fa-solid fa-magnifying-glass"></i>
      </button>
    </form>
  </div>
</nav>

</style>

<img
  src="<%= college.collegeLogo.url %>"
  alt="College Logo"
  style="
    height: 100px;
    width: 100px;
    border: 1px solid pink;
    border-radius: 50%;
  "
/>
<h1 class="col-6"><%= college.college %></h1>

<!-- Display Clubs -->
<div class="club-container">
  <% if (college.clubs.length > 0) { %> <% college.clubs.forEach(club => { %>
  <a href="/<%= club.ClubName %>/profile" class="club-link">
    <div class="club-card">
      <img
        src="<%= club.ClubLogo.url %>"
        class="card-img-top"
        alt="<%= club.ClubName %>"
      />
      <div class="card-body">
        <h3 class="card-title"><%= club.ClubName %></h3>
        <p><strong>Total Events:</strong> <%= club.events.length %></p>
      </div>
    </div>
  </a>
  <% }) %> <% } else { %>
  <p>No clubs available.</p>
  <% } %>
</div>
